{
  "manifest_version": 2,
  "name": "KI-Text-Detector",
  "version": "1.0",
  "description": "Detects all text on the current page by searching for EM-Dashes.",
  "permissions": [
    "activeTab",
    "tabs"
  ],
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "browser_action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "KI-Text-Detector"
  }
}